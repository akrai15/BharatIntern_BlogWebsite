<%- include("header"); -%>

<div class="blog-posts">
    <% if (posts.length === 0) { %>
        <p>No posts available</p>
    <% } else { %>
        <% for (let post of posts) { %>
            <% if (post.email === email) { %>
                <div class="blog-post">
                    <img src="<%= post.image %>" alt="<%= post.title %>">
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                    <a href="/compose/<%= post._id %>" class="edit-button" style="float: left;">Edit</a>
                    <a href="/delete/<%= post._id %>" class="delete-button" style="float: right;">Delete</a>
                </div>
            <% } %>
        <% } %>
    <% } %>
</div>




